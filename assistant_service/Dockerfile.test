# Build stage
FROM python:3.11-slim as builder

WORKDIR /

# Install poetry
RUN pip install poetry

# Copy dependency files
COPY shared_models ./shared_models
COPY assistant_service ./assistant_service

# Configure poetry and install dependencies
RUN cd assistant_service && \
    poetry config virtualenvs.create false && \
    poetry install --only main,test --no-interaction --no-ansi

# Test stage
FROM python:3.11-slim

WORKDIR /

ENV PYTHONPATH=/src \
    PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    TESTING=1

# Copy installed packages and scripts from builder
COPY --from=builder /usr/local/lib/python3.11/site-packages /usr/local/lib/python3.11/site-packages
COPY --from=builder /usr/local/bin /usr/local/bin

# Copy application code and tests
COPY assistant_service/src/ /src/
COPY assistant_service/tests/ /tests/

CMD ["pytest", "-v", "--cov=src", "--cov-report=term-missing", "/tests/"] 